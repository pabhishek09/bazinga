{
  "name": "bazinga",
  "version": "0.1.0",
  "private": true,
  "description": "From ideas to execution. Project management - dev style!",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.4",
    "@testing-library/user-event": "^12.6.3",
    "axios": "^0.21.1",
    "bulma": "^0.9.2",
    "octonode": "^0.10.0",
